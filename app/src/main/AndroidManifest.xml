<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.convity">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.MANAGE_EXTERNAL_STORAGE" />

    <application
        android:name=".application.ConvityApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:requestLegacyExternalStorage="true"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Convity"
        android:usesCleartextTraffic="true">
        <activity
            android:name=".presentation.newpost.sendpost.view.SendPostActivity"
            android:exported="true" />
        <activity
            android:name=".presentation.newpost.createpost.view.CreatePostActivity"
            android:exported="true" />
        <activity
            android:name=".presentation.newpost.filterpost.view.FilterPostActivity"
            android:exported="true" />
        <activity
            android:name=".presentation.editprofile.view.EditProfileActivity"
            android:exported="true" />
        <activity
            android:name=".presentation.country.view.activity.CountryPickerActivity"
            android:exported="true" />
        <activity
            android:name=".presentation.verification.view.VerificationSuccessActivity"
            android:exported="true" />
        <activity
            android:name=".presentation.home.view.activity.HomeActivity"
            android:exported="true" />
        <activity
            android:name=".presentation.register.view.RegisterActivity"
            android:exported="true" />
        <activity
            android:name=".presentation.verification.view.VerificationActivity"
            android:exported="true"
            android:theme="@style/Theme.Convity.Login" />
        <activity
            android:name=".presentation.login.view.LoginActivity"
            android:exported="true"
            android:theme="@style/Theme.Convity.Login" />
        <activity
            android:name=".presentation.splash.view.SplashActivity"
            android:exported="true"
            android:theme="@style/Theme.Convity.Login">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>